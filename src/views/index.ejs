<%- include("./partials/header.ejs") %>

<section class="library" id="library">
  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% for (let book of content) { %>
        <div class="col">
          <div class="card shadow-sm">
            <% if (book.thumbnail !== "Imagen no disponible") { %>
            <a
              href="/bookview?book=<%= encodeURIComponent(JSON.stringify(book)) %>"
            >
              <div class="card__image-container">
                <img class="card__image" src="<%= book.thumbnail %>" />
              </div>
            </a>
            <% } else {%>
            <a
              href="/bookview?book=<%= encodeURIComponent(JSON.stringify(book)) %>"
            >
              <svg
                class="bd-placeholder-img card-img-top card__svg"
                width="100%"
                height="225"
                xmlns="http://www.w3.org/2000/svg"
                role="img"
                aria-label="Placeholder: Thumbnail"
                preserveAspectRatio="xMidYMid slice"
                focusable="false"
              >
                <title>Placeholder</title>
                <rect width="100%" height="100%" fill="#55595c"></rect>
                <text
                  x="50%"
                  y="50%"
                  text-anchor="middle"
                  alignment-baseline="middle"
                  fill="#eceeef"
                >
                  Imagen no disponible
                </text>
              </svg>
            </a>
            <% } %>

            <div class="card-body">
              <a
                href="/bookview?book=<%= encodeURIComponent(JSON.stringify(book)) %>"
                class="card-text card__title"
                ><%= book.title %></a
              >
              <p class="card__authors"><%= book.authors %></p>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</section>

<%- include("./partials/footer.ejs") %>
